{
  "name": "iar-vsc",
  "displayName": "IAR For Visual Studio Code",
  "description": "Develop IAR projects with intellisense, C-STAT and build support.",
  "version": "2.0.0",
  "publisher": "pluyckx",
  "icon": "images/logo.png",
  "galleryBanner": {
    "color": "#ffe000",
    "theme": "light"
  },
  "preview": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/pluyckx/iar-vsc.git"
  },
  "homepage": "https://www.iar.com/",
  "engines": {
    "vscode": "^1.33.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "IAR",
    "ARM",
    "Embedded",
    "Embedded Workbench",
    "IoT",
    "build",
    "c",
    "c++",
    "cpp",
    "multi-root ready"
  ],
  "activationEvents": [
    "onCommand:iar.selectToolchain",
    "onCommand:iar.selectProject",
    "onCommand:iar.selectConfiguration",
    "onCommand:iar.selectIarWorkspace",
    "onCommand:iar.addToolchain",
    "onCommand:iar.addFile",
    "onCommand:iar.addGroup",
    "onCommand:iar.removeNode",
    "onCommand:iar.reloadProject",
    "onCommand:iar-settings.toolchain",
    "onCommand:iar-settings.project-file",
    "onCommand:iar-settings.project-configuration",
    "onView:iar-settings",
    "onView:iar-project",
    "workspaceContains:**/*.ewp"
  ],
  "main": "./out/src/extension/main.js",
  "contributes": {
    "commands": [
      {
        "command": "iar.selectToolchain",
        "title": "Select Toolchain",
        "category": "IAR"
      },
      {
        "command": "iar.selectProject",
        "title": "Select Project",
        "category": "IAR"
      },
      {
        "command": "iar.selectConfiguration",
        "title": "Select Configuration",
        "category": "IAR"
      },
      {
        "command": "iar-settings.toolchain",
        "title": "Get the selected toolchain location",
        "category": "IAR Settings"
      },
      {
        "command": "iar-settings.project-file",
        "title": "Get the selected project file",
        "category": "IAR Settings"
      },
      {
        "command": "iar-settings.project-configuration",
        "title": "Get the selected project configuration",
        "category": "IAR Settings"
      },
      {
        "command": "iar.addFile",
        "title": "Add file(s) here",
        "category": "IAR",
        "icon": "$(new-file)"
      },
      {
        "command": "iar.addGroup",
        "title": "Add group here",
        "category": "IAR",
        "icon": "$(new-folder)"
      },
      {
        "command": "iar.removeNode",
        "title": "Remove file/group from project",
        "category": "IAR",
        "icon": "$(trash)"
      },
      {
        "command": "iar.reloadProject",
        "title": "Reload project",
        "category": "IAR",
        "icon": "$(refresh)"
      },
      {
        "command": "iar.addToolchain",
        "title": "Add an IAR Embedded Workbench or IAR Build Tools installation",
        "category": "IAR"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "iar-vsc",
          "title": "IAR for Visual Studio Code",
          "icon": "images/logo-transparent.svg"
        }
      ]
    },
    "views": {
      "iar-vsc": [
        {
          "id": "iar-settings",
          "name": "Extension Configuration",
          "type": "webview"
        },
        {
          "id": "iar-project",
          "name": "Files",
          "type": "tree",
          "contextualTitle": "IAR Project"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "iar.reloadProject",
          "when": "view == iar-project"
        },
        {
          "command": "iar.addFile",
          "when": "view == iar-project && iarvsc.extendedProjectLoaded",
          "group": "navigation"
        },
        {
          "command": "iar.addGroup",
          "when": "view == iar-project && iarvsc.extendedProjectLoaded",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "iar.removeNode",
          "when": "view == iar-project && viewItem == group || viewItem == file",
          "group": "inline"
        },
        {
          "command": "iar.addGroup",
          "when": "view == iar-project && viewItem == group",
          "group": "inline"
        },
        {
          "command": "iar.addFile",
          "when": "view == iar-project && viewItem == group",
          "group": "inline"
        }
      ],
      "commandPalette": [
        {
          "command": "iar.addFile",
          "when": "false"
        },
        {
          "command": "iar.addGroup",
          "when": "false"
        },
        {
          "command": "iar.removeNode",
          "when": "false"
        },
        {
          "command": "iar-settings.toolchain",
          "when": "false"
        },
        {
          "command": "iar-settings.project-file",
          "when": "false"
        },
        {
          "command": "iar-settings.project-configuration",
          "when": "false"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "iar-project",
        "contents": "When an IAR project is loaded, you can see and manage its contents here."
      }
    ],
    "grammars": [
      {
        "scopeName": "iar-keywords.injection",
        "path": "./syntaxes/iar-c-cpp.tmLanguage.json",
        "injectTo": [
          "source.c",
          "source.cpp"
        ]
      }
    ],
    "configuration": {
      "title": "IAR for Visual Studio Code",
      "properties": {
        "iarvsc.iarInstallDirectories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Paths to search for IAR toolchain (IAR Embedded Workbench or IAR Build Tools) installations. This can be used to manually locate installations that are not found automatically.",
          "scope": "machine",
          "default": [
            "C:\\Program Files\\IAR Systems",
            "C:\\Program Files (x86)\\IAR Systems"
          ]
        },
        "iarvsc.defines": {
          "type": "array",
          "description": "A list of additional defines to use for intellisense, which are not listed in the project file or defined by the compiler. Note that this does not affect building.",
          "default": [
            "_Pragma(x)="
          ]
        },
        "iarvsc.cStandard": {
          "type": "string",
          "enum": [
            "c89",
            "c99",
            "c11",
            "c17"
          ],
          "description": "The c standard to use for intellisense.",
          "default": "c17"
        },
        "iarvsc.cppStandard": {
          "type": "string",
          "enum": [
            "c++98",
            "c++03",
            "c++11",
            "c++14",
            "c++17"
          ],
          "description": "The c++ standard to use for intellisense.",
          "default": "c++17"
        },
        "iarvsc.c-stat.filterLevel": {
          "description": "C-STAT warnings with a lower severity than this are filtered out.",
          "default": "Low",
          "type": "string",
          "enum": [
            "Low",
            "Medium",
            "High"
          ]
        },
        "iarvsc.c-stat.displayLowSeverityWarningsAsHints": {
          "description": "If the filter level is set to Low, displays low severity C-STAT warnings as hints rather than warnings. This hides them from the problem list, but still shows them in the editor.",
          "type": "boolean",
          "default": false
        },
        "iarvsc.extraBuildArguments": {
          "type": "array",
          "markdownDescription": "Extra command line arguments to supply to iarbuild (e.g. [\"-parallel\", \"4\"].",
          "items": {
            "type": "string"
          },
          "default": ["-parallel", "4"]
        }
      }
    },
    "problemMatchers": [
      {
        "name": "iar-cc",
        "owner": "cpp",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^([^(]*)\\((\\d*)\\)\\s*:\\s*([^\\[]*)[^:]*:\\s*(.*)",
          "file": 1,
          "line": 2,
          "severity": 3,
          "message": 4
        }
      },
      {
        "name": "iar-linker",
        "owner": "cpp",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^([^\\[]*)[^\\]]*\\]\\s*:\\s*([^\\(]*)\\(\\s*(.*)\\s*\\)",
          "file": 3,
          "message": 2,
          "severity": 1,
          "kind": "file"
        }
      }
    ],
    "taskDefinitions": [
      {
        "type": "iar",
        "properties": {
          "command": {
            "type": "string",
            "description": "The command, or \"mode\", to run iarbuild with.",
            "enum": [
              "build",
              "rebuild",
              "clean",
              "open"
            ]
          },
          "project": {
            "type": "string",
            "description": "The project (.ewp) file to use.",
            "format": "uri"
          },
          "config": {
            "type": "string",
            "description": "The project configuration to use."
          },
          "workbench": {
            "type": "string",
            "description": "The IAR Embedded Workbench IDE to use to open workspaces."
          },
          "builder": {
            "type": "string",
            "description": "The iarbuild executable to run."
          },
          "workspace": {
            "type": "string",
            "description": "The workspace file to open (for the 'open' command)."
          },
          "label": {
            "type": "string",
            "description": "The name for this task. Will be shown in the VS Code UI."
          },
          "extraBuildArguments": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Extra arguments to supply to iarbuild (e.g. [\"-parallel\", \"8\"]). Leave empty to use the extension settings.",
            "default": []
          }
        },
        "required": [
          "label",
          "command"
        ]
      },
      {
        "type": "iar-cstat",
        "properties": {
          "label": {
            "type": "string",
            "description": "The name for this task. Will be shown in the VS Code UI."
          },
          "action": {
            "type": "string",
            "enum": [
              "run",
              "clear"
            ],
            "description": "What to do when running the task (generate warnings or clear them)."
          },
          "project": {
            "type": "string",
            "description": "The project (.ewp) file to use."
          },
          "config": {
            "type": "string",
            "description": "The project configuration to use."
          },
          "builder": {
            "type": "string",
            "description": "The iarbuild executable to run."
          },
          "extraBuildArguments": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Extra arguments to supply to iarbuild (e.g. [\"-parallel\", \"8\"]). Leave empty to use the extension settings.",
            "default": []
          }
        },
        "required": [
          "label",
          "action"
        ]
      }
    ],
    "walkthroughs": [
      {
        "id": "iar-vsc",
        "description": "Learn how to build and edit IAR Embedded Workbench projects",
        "featuredFor": [
          "**/*.ewp"
        ],
        "title": "Get started with developing IAR projects",
        "steps": [
          {
            "id": "load",
            "title": "Load a project",
            "description": "Test",
            "completionEvents": [
              "onView:iar-settings"
            ],
            "media": {
              "markdown": "README.md"
            }
          },
          {
            "id": "build",
            "title": "Build your project",
            "completionEvents": [
              "onView:iar-settings"
            ],
            "media": {
              "markdown": "README.md"
            }
          },
          {
            "id": "cstat",
            "title": "Analyze your project with C-STAT",
            "description": "Test",
            "completionEvents": [
              "onStepSelected"
            ],
            "media": {
              "markdown": "README.md"
            }
          },
          {
            "id": "project",
            "title": "Add files to your project",
            "completionEvents": [
              "onView:iar-project"
            ],
            "media": {
              "markdown": "README.md"
            }
          }
        ]
      }
    ]
  },
  "extensionDependencies": [
    "ms-vscode.cpptools"
  ],
  "scripts": {
    "lint": "eslint . --ext .ts",
    "vscode:prepublish": "npm run package",
    "webpack": "webpack --mode development",
    "webpack-watch": "webpack --mode development --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "npm run webpack && tsc -p ./"
  },
  "devDependencies": {
    "@types/jsdom": "^16.2.14",
    "@types/mocha": "^2.2.42",
    "@types/node": "^15.6.0",
    "@types/sanitize-html": "^2.6.2",
    "@types/uuid": "^8.3.1",
    "@types/vscode": "^1.33.0",
    "@types/winreg": "^1.2.31",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "eslint": "^8.1.0",
    "eslint-plugin-deprecation": "^1.3.2",
    "java-properties": "^1.0.2",
    "mocha": "^9.0.1",
    "mocha-junit-reporter": "^2.0.2",
    "ts-loader": "^9.2.6",
    "tslint": "^5.8.0",
    "typescript": "^4.3.0",
    "vscode-test": "^1.3.0",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "@types/thrift": "^0.10.9",
    "@vscode/codicons": "^0.0.27",
    "@vscode/webview-ui-toolkit": "^0.8.5",
    "async-mutex": "^0.3.2",
    "bufferutil": "^4.0.6",
    "csv-parse": "4.8.8",
    "fast-deep-equal": "2.0.1",
    "jsdom": "^19.0.0",
    "rxjs": "^7.5.2",
    "sanitize-html": "^2.6.1",
    "thrift": "^0.12.0",
    "utf-8-validate": "^5.0.8",
    "uuid": "^8.3.2",
    "vscode-cpptools": "^5.0.0",
    "vscode-jsonrpc": "^3.0.0",
    "winreg": "^1.2.4",
    "xml-js": "1.6.8"
  }
}
